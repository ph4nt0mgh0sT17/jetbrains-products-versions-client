<UserControl x:Class="JetBrainsProductsVersionsClient.Views.Controls.LoadingSpinnerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JetBrainsProductsVersionsClient.Views.Controls"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=local:LoadingSpinnerControl, IsDesignTimeCreatable=True}">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="25" 
                       TextWrapping="WrapWithOverflow"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="30" 
                       Text="{Binding Path=LoadingTitle}"/>

            <fa:ImageAwesome Icon="CircleOutlineNotch" Width="50" Spin="True" SpinDuration="4" />
        </StackPanel>
    </Grid>
</UserControl>
